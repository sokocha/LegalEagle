  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <li><a class="navbar-brand" href="/"><i class="fa fa-university">Legal 9ja</i></a></li>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', thrs_path  %></li>
          <% if current_user %>
            <li><%= link_to 'New Question', new_thr_path  %></li>
          <% end %>
        </ul>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><% if current_user %> <%= current_user.email %> <% else %> Register/Signin <% end %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <% unless current_user %>
                  <li><%= link_to t(:login), login_url, :class=>'ui_button' %></li>
                  <li><%= link_to  "Sign up", register_url,:class=>'ui_button' %></li>
              <% else %>
                  <%= user_label_small(current_user) %>
                  <%= link_to t(:profile), profile_url, :class=>'ui_button' %>
                  <li role="separator" class="divider"></li>
                  <%= link_to t(:logout), logout_url, :class=>'ui_button notsoimportant' %>
              <% end %>
            </ul>
          </li>
        </ul>
